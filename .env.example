# =================================================================
# CONFIGURAÇÕES DO SISTEMA JOURNEY 100K
# =================================================================

# Ambiente de execução
NODE_ENV=development
PORT=3000

# =================================================================
# SUPABASE - BANCO DE DADOS E AUTENTICAÇÃO
# =================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =================================================================
# AUTENTICAÇÃO JWT
# =================================================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# =================================================================
# EMAIL (NODEMAILER)
# =================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =================================================================
# UPLOAD DE ARQUIVOS
# =================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword

# =================================================================
# INTEGRAÇÕES EXTERNAS
# =================================================================

# WhatsApp Business API
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token

# Google APIs (Calendar, Drive, etc.)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# =================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =================================================================
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# =================================================================
# LOGS E MONITORAMENTO
# =================================================================
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# =================================================================
# CONFIGURAÇÕES DA EMPRESA
# =================================================================
COMPANY_NAME=Soluzione Giusta
COMPANY_EMAIL=contato@soluzionegiusta.com
COMPANY_PHONE=+55 11 99999-9999
COMPANY_ADDRESS=São Paulo, SP, Brasil

# =================================================================
# CONFIGURAÇÕES DO SISTEMA
# =================================================================
SYSTEM_NAME=Journey 100k
SYSTEM_VERSION=1.0.0
SYSTEM_TIMEZONE=America/Sao_Paulo
SYSTEM_LANGUAGE=pt-BR
SYSTEM_CURRENCY=BRL

# =================================================================
# BACKUP E STORAGE
# =================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=journey-100k-storage

# =================================================================
# REDIS (CACHE E SESSÕES)
# =================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =================================================================
# WEBHOOKS
# =================================================================
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=30000
